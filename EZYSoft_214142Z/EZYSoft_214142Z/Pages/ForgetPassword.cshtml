@page
@model Fresh_Farm_Market_214142Z.Pages.ForgetPasswordModel
@{
}

<div class="container mt-5">

	<div class="row justify-content-center align-items-center">

		<div class="col-sm-12 col-md-12 col-lg-4">
			<h1 class="mb-3">Forget Password </h1>

			<form method="post" asp-antiforgery="true">
				<div asp-validation-summary="All" class="text-danger"></div>

				<div class="mb-3">
					<label class="form-label" asp-for="FModel.Email">Enter email Address</label>
					<input type="Text" asp-for="FModel.Email" class="form-control" />
					<span asp-validaton-for="FModel.Email" class="text-danger"></span>
				</div>

				<input type="hidden" id="FModelToken" asp-for="FModel.Token">
				<input type="hidden" id="LoginViewModelToken" asp-for="FModel.Token" />

				<div class="mb-3">
					<button type="submit" class="btn btn-primary">Reset password</button>
				</div>
			</form>
		</div>
	</div>
</div>